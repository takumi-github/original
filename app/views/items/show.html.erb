<h1>詳細ページ</h1>

<div>
  <%= link_to @item.user.name, user_path(@item.user) %> <span class="text-muted">posted at <%= @item.created_at %></span>
</div>
<div>
  <p><%= image_tag @item.image.url if @item.image? %></p>
</div>
<div>
  <p><%= @item.content %></p>
</div>
<div>
  <span><%= link_to "チャットへ", chats_path(@item), class: "btn btn-primary btn-sm" %></span>
  <% if current_user == @item.user %>
    <span><%= link_to "編集する", edit_item_path(@item), class: "btn btn-light btn-sm" %></span>
  <% end %>
</div>

