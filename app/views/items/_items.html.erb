<ul class="list-unstyled">
      <% items.each do |item| %>
        <li>
          <img class="mr-2 rounded" src="<%= gravatar_url(item.user, { size: 50 }) %>" alt="">
              <div>
                <%= link_to item.user.name, user_path(item.user) %> <span class="text-muted">posted at <%= item.created_at %></span>
              </div>
              <div class="img">
                <p><%= image_tag item.image.url if item.image? %></p>
              </div>
              <div>
                <p><%= item.content %></p>
              </div>
              <div class="mb-3">
                <span><%= link_to"詳細", item_path(item), class: "btn btn-primary btn-sm" %></span>
                <% if current_user == item.user %>
                  <span><%= link_to "削除", item, method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-danger btn-sm' %></span>
                <% end %>
              </div>
        </li>
      <% end %>
    <%= paginate items %>
</ul>