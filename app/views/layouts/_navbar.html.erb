<header class="mb-4">
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
  <% if logged_in? %>
  <a class="navbar-brand" href="/items">出品一覧</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse justify-content-end" id="navbarSupportedContent">
    <ul class="navbar-nav">
        <li class="nav-item"><%= link_to "My profile", user_path(current_user), class: "nav-link" %></li>
        <li class="nav-item"><%= link_to "Logout", logout_path, method: :delete, class: "nav-link" %></li>
    </ul>
  </div>
  <% else %>
  <a class="navbar-brand" href="/">トップページ</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse justify-content-end" id="navbarSupportedContent">
    <ul class="navbar-nav">
        <li class="nav-item"><%= link_to "Signup", signup_path, class: "nav-link" %></li>
        <li class="nav-item"><%= link_to "Login", login_path, class: "nav-link" %></li>
    </ul>
  </div>  
  <% end %>
</header>